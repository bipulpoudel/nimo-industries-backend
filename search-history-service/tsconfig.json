{
  "compilerOptions": {
    "lib": ["es5", "es6", "ES2021.String"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "build"]
}
